<%= form_for(@user, :html => { :class => "well form_well", :onSubmit => "return validatePendingSignup()"} ) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, :value => @user.email, :readonly => "true" %>

    <%= f.label :password %>
    <%= f.password_field :password, :onChange => "validatePendingSignupPassword();" %>
	<p id="user_password_error" class="help-block error removed"></p>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :onChange => "validatePendingSignupConfirmation();" %>
	<p id="user_password_confirmation_error" class="help-block error removed"></p>

	<input type="hidden" id="user_secret" name="user_secret" value="<%= @secret %>" />
  	<%= f.submit :class => "btn btn-large btn-primary" %>

<% end %>